{
  "name": "wct-bstack",
  "version": "0.1.0",
  "description": "WCT plugin that enables support for Browserstack via Selenium WebDriver",
  "keywords": [
    "wct",
    "web-component-tester",
    "plugin"
  ],
  "homepage": "https://github.com/misttechnologies/wct-bstack",
  "bugs": "https://github.com/misttechnologies/wct-bstack/issues",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/misttechnologies/wct-bstack.git"
  },
  "main": "lib/plugin.js",
  "typings": "lib/plugin.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "test": "mocha"
  },
  "wct-plugin": {
    "cli-options": {
      "browsers": {
        "help": "Remote Browserstack browsers to run tests on, or 'default'.",
        "full": "bstack",
        "metavar": "NAME",
        "abbr": "b",
        "list": true
      },
      "username": {
        "help": "Browserstack username.",
        "full": "bstack-username"
      },
      "accessKey": {
        "help": "Browserstack access key.",
        "full": "bstack-access-key"
      }
    }
  },
  "devDependencies": {
    "typescript": "^2.0.0"
  },
  "dependencies": {
    "@types/chalk": "^0.4.28",
    "@types/express": "^4.0.30",
    "@types/freeport": "^1.0.19",
    "@types/launchpad": "^0.6.0",
    "@types/node": "^6.0.31",
    "@types/which": "^1.0.27",
    "chalk": "^1.1.1",
    "cleankill": "^1.0.3",
    "freeport": "^1.0.4",
    "launchpad": "^0.6.0",
    "promisify-node": "^0.4.0",
    "selenium-standalone": "^5.8.0",
    "which": "^1.0.8"
  },
  "engines": {
    "node": ">=6.0"
  }
}
